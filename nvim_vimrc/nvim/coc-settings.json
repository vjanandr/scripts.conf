{
  "languageserver": {
    "pyls": {
      "command": "pyls",
      "rootPatterns": [".git/"],
      "filetypes": ["python", "py"]
    },
    "fortls": {
      "command": "fortls",
      "rootPatterns": [".git/"],
      "filetypes": ["fortran", "f90"]
    },
    "clangd": {
      "command": "clangd-6.0",
      "rootPatterns": [".git/"],
      "filetypes": ["c", "cpp"]
    }
  },
  "diagnostic.enable": false,
  "diagnostic.locationlist": false
}
